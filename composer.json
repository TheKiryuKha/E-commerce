{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "thekiryukha/e-commerceapi",
    "type": "project",
    "description": "E-commerce API pet projetc",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.10.1",
        "maatwebsite/excel": "^3.1",
        "spatie/laravel-query-builder": "^6.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.6",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-type-coverage": "^3.6",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/Infrastructure/",
            "Domain\\": "src/Domain",
            "Application\\": "src/Application",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"npm run dev\" --names='server,queue,vite'"
        ],


        "lint": "pint",
        "refactor": "php -d memory_limit=-1 vendor/bin/rector",
        
        "fix": [
            "@refactor",
            "@lint"
        ],

        "commit": [
            "@test:unit",
            "@test:types",
            "@refactor",
            "@lint"
        ],
        
        "test:lint": "pint --test",
        "test:refactor": "rector --dry-run",
        "test:arch": "pest --group=arch",
        "test:types": "phpstan analyse --memory-limit=-1",
        "test:unit": "pest --parallel --coverage",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:unit"
        ],

        "app:install": [
            "composer dump-autoload --optimize",
            "php artisan config:cache",
            "php artisan event:cache",
            "php artisan route:cache",
            "php artisan view:cache",
            "php artisan optimiz",
            "php artisan storage:link",

            "php artisan key:generate",

            "php artisan migrate",

            "php artisan app:create-admin"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
